<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NestJS Todo MVC</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <main class="app">
      <header>
        <h1>NestJS Todo MVC</h1>
        <p>Track tasks with a simple MVC-style NestJS app.</p>
      </header>

      <section class="card">
        <form class="todo-form" action="/todos" method="post">
          <label for="title">New todo</label>
          <div class="field">
            <input id="title" name="title" type="text" placeholder="What needs to be done?" required />
            <button type="submit">Add</button>
          </div>
        </form>
      </section>

      <section class="card">
        <div class="summary">
          <div>
            <strong><%= summary.total %></strong>
            <span>Total</span>
          </div>
          <div>
            <strong><%= summary.completed %></strong>
            <span>Done</span>
          </div>
          <div>
            <strong><%= summary.remaining %></strong>
            <span>Remaining</span>
          </div>
        </div>

        <ul class="todo-list">
          <% if (todos.length === 0) { %>
            <li class="empty">No tasks yet. Add one above.</li>
          <% } %>
          <% todos.forEach((todo) => { %>
            <li class="todo-item <%= todo.status === 'done' ? 'done' : '' %>">
              <div class="todo-title">
                <span><%= todo.title %></span>
                <small>Added <%= todo.createdAt.toLocaleString() %></small>
              </div>
              <div class="todo-actions">
                <form action="/todos/<%= todo.id %>/toggle" method="post">
                  <button type="submit" class="ghost">
                    <%= todo.status === 'done' ? 'Undo' : 'Complete' %>
                  </button>
                </form>
                <form action="/todos/<%= todo.id %>/delete" method="post">
                  <button type="submit" class="danger">Delete</button>
                </form>
              </div>
            </li>
          <% }) %>
        </ul>
      </section>
    </main>
  </body>
</html>
